    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/index</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>PaP.ui.IndexUI</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
